{
  "name": "cowsay",
  "version": "1.0.0",
  "description": "A simple cowsay application",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "cowsay": "node ./node_modules/carbon-now-cli/dist/cli.js quote.txt -l -w 800 -h 400 -t png --save-as quote -p presentation --config .carbon-now.json",
    "start": "ts-node say.ts && npm run cowsay",
    "tweet": "ts-node tweet.ts"
  },
  "keywords": [
    "cowsay",
    "cli"
  ],
  "author": "Bruno Palma",
  "license": "MIT",
  "dependencies": {
    "@darkobits/lolcatjs": "^3.1.5",
    "carbon-now-cli": "^2.0.0",
    "color-name-list": "^10.22.0",
    "cowsay": "^1.6.0",
    "isomorphic-lolcat": "^0.3.0",
    "twitter-api-client": "^1.6.1",
    "twitter-api-v2": "^1.16.3",
    "word-wrap": "^1.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.12.8"
  }
}