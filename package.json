{
  "name": "cowsay",
  "version": "1.0.0",
  "description": "A simple cowsay application",
  "engines": {
    "node": "20.12.2"
  },
  "scripts": {
    "clean": "rm -rf dist/**.*",
    "compile": "tsc",
    "start": "npm run clean && npm run compile && npm run say && npm run lolcat",
    "say": "node dist/say.js",
    "lolcat": "cat dist/quote.txt | lolcat",
    "tweet": "node dist/tweet.js"
  },
  "keywords": [
    "cowsay",
    "cli"
  ],
  "author": "Bruno Palma",
  "license": "MIT",
  "dependencies": {
    "cowsay": "^1.6.0",
    "twitter-api-v2": "^1.16.3",
    "word-wrap": "^1.2.5",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.12.8"
  }
}
