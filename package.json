{
  "name": "cowsay",
  "version": "1.0.0",
  "description": "A simple cowsay application",
  "engines": {
    "node": "20.12.2"
  },
  "scripts": {
    "clean": "rm -rf dist/**.*",
    "compile": "tsc",
    "start": "npm run clean && npm run compile && npm run say && npm run lolcat && npm run convert",
    "convert": "node dist/convert.js",
    "say": "node dist/say.js",
    "lolcat": "cat dist/quote.txt | lolcat --force > ./dist/lolcat.ansi",
    "tweet": "node dist/tweet.js"
  },
  "keywords": [
    "cowsay",
    "cli"
  ],
  "author": "Bruno Palma",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.12.2",
    "ansi-to-html": "^0.7.2",
    "cowsay": "^1.6.0",
    "jsdom": "^24.0.0",
    "node-html-to-image": "^4.0.0",
    "twitter-api-v2": "^1.16.3",
    "typescript": "^5.4.5",
    "word-wrap": "^1.2.5"
  }
}
